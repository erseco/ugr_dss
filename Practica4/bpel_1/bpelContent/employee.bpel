<!-- employee BPEL Process [Generated by the Eclipse BPEL Designer] -->

<bpel:process name="employee"
         targetNamespace="http://employee"
         suppressJoinFailure="yes"
         xmlns:tns="http://employee"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://www.w3.org/2001/XMLSchema">

    <!-- Import the client WSDL -->
	<bpel:import location="employee.wsdl" namespace="http://employee"
	        importType="http://schemas.xmlsoap.org/wsdl/" />

    <!-- ================================================================= -->
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:employee"
                     myRole="employeeProvider"
                     />
    </bpel:partnerLinks>

    <!-- ================================================================= -->
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:employeeRequestMessage"/>

        <!--
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:employeeResponseMessage"/>
        <bpel:variable name="Variable" type="ns1:string"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->
    <bpel:sequence name="main">

        <!-- Receive input from requester.
             Note: This maps to operation defined in employee.wsdl
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:employee"
                 operation="getType" variable="input"
                 createInstance="yes"/>

        <!-- Generate reply to synchronous request -->
        <bpel:if name="If">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:name = "ernesto"]]></bpel:condition>
            <bpel:assign validate="no" name="AssignIf"><bpel:copy>
                    <bpel:from>
                        <bpel:literal xml:space="preserve"><tns:employeeResponse xmlns:tns="http://employee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:type>business</tns:type>
</tns:employeeResponse>
</bpel:literal>
                    </bpel:from>
                    <bpel:to variable="output" part="payload"></bpel:to>
                </bpel:copy>

            
            </bpel:assign>
            <bpel:elseif>
                <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:name = "alejandro"]]></bpel:condition>
                <bpel:assign validate="no" name="AssignElseIf">



                    <bpel:copy>
                        <bpel:from><bpel:literal xml:space="preserve"><tns:employeeResponse xmlns:tns="http://employee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:type>1st class</tns:type>
</tns:employeeResponse>
</bpel:literal></bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>

                </bpel:assign>
            </bpel:elseif>
            <bpel:else>
                <bpel:assign validate="no" name="AssignElse">

                    <bpel:copy>
                        <bpel:from><bpel:literal xml:space="preserve"><tns:employeeResponse xmlns:tns="http://employee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:type>2nd class</tns:type>
</tns:employeeResponse>
</bpel:literal></bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>

                </bpel:assign>
            </bpel:else></bpel:if>
        <bpel:reply name="replyOutput"
               partnerLink="client"
               portType="tns:employee"
               operation="getType"
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

